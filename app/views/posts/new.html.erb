<div class="container">
  <div class="fullwidth">
    <h2 class="title">Nova Publicação</h2>
    <br />
    <div class="newpub">
     <%= render 'form' %>
    </div>
    <br>
    <div>
      <h2 class="title">Publicações</h2>
      <br>
      <% @posts.each do |p| %>
        <div class="media">
          <%= link_to image_tag("/images/avatar/#{p.empregado.image}.png", alt: "avatar", class: "avatar"), p.empregado, class: "img" %>
          <div class="bd">
            <h4 class="name"><%= link_to p.empregado.name, p.empregado%></h4>
            <% if p.image %><%= image_tag "/images/posts/#{p.image}", alt: "imagem", class: "imgExt"%><%end%>
            <p><%=p.text%></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

