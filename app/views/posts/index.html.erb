<h2 class="title">Publicações</h2>


<table>
  <thead>
    <tr>
      <th><h4 class="name"><%= @post.empregado_id %></h4></th>
      <th><%= @post.text%></th>
      <th><img class="imgExt" alt="avatar" src="images/colegas.jpg"><%= @post.image %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.empregado_id. %></td>
        <td><%= post.text %></td>
        <td><%= post.image %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

