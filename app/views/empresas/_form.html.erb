<%= form_for(@empresa) do |f| %>
  <%= f.hidden_field :owner_id, :value => current_empregado.id %>
  <%= f.hidden_field :logo, :value => "company_placeholder.png" %>
  <div class="field">
    <br />
    <%= f.text_field :name, :class => "forminput", :placeholder => "Nome" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Criar Empresa" , :class => "button btngreen" %>
  </div>
<% end %>
